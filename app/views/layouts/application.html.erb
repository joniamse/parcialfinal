<!DOCTYPE html>
<html>
  <head>

    

    <div class="btn-group text-center" role="group">
      
      <%= link_to 'Cabins', cabins_path, class: "btn btn-secondary" %>
      <%= link_to 'Payments', payments_path, class: "btn btn-secondary" %>
      <%= link_to 'Rates', rates_path, class: "btn btn-secondary" %>
      <%= link_to 'People', people_path, class: "btn btn-secondary" %>
      <%= link_to 'Cars', cars_path, class: "btn btn-secondary" %>
    </div>

    <% if current_user %>
      <%= render 'shared/user_menu' %>
      <%= link_to('Edit Profile', edit_user_registration_path, class: "btn btn-primary") %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>

    <% else %>
      <%= link_to "Log in►", new_user_session_path, class: "btn btn-primary" %> |
      <%= link_to "Sign up►", new_user_registration_path, class: "btn btn-primary" %> |
    <% end %>
    
    <title>Peaje</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
  
  
    



    <div class="container" style="margin-top: 80px !important; min-height: 950px;">

      
      <%= yield %>
    </div>

    <nav class="navbar fixed-bottom navbar-dark bg-secondary">
      
        <a class="navbar-brand" href="#!"><small>&copy; 2021 - SISTEMA DE PEAJE</small></a>
    </nav>

  
    <%= yield %>
  </body>
</html>
